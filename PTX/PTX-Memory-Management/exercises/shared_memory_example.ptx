//
// Shared memory bank conflict example
// Demonstrates how to cause and avoid bank conflicts
//

.version 6.0
.target sm_50
.address_size 64

.visible .entry shared_memory_example(
    .param .u64 input_ptr,
    .param .u64 output_ptr,
    .param .u32 n
) {
    .reg .u32 %tid, %local_tid;
    .reg .u32 %n_val;
    .reg .u64 %input_addr, %output_addr;
    .reg .u64 %input_idx_addr;
    .reg .f32 %value;
    .reg .pred %cond;
    
    // Shared memory declaration (for conceptual purposes)
    // In actual PTX, shared memory is declared differently
    // .shared .align 4 .b8 shared_mem[1024];
    
    // Get thread ID
    mov.u32 %tid, %tid.x;
    and.b32 %local_tid, %tid, 31;  // Get thread ID within warp
    
    // Load parameters
    ld.param.u32 %n_val, [n];
    ld.param.u64 %input_addr, [input_ptr];
    ld.param.u64 %output_addr, [output_ptr];
    
    // Calculate address for this thread
    mul.wide.u32 %input_idx_addr, %tid, 4;  // 4 bytes per float
    add.u64 %input_idx_addr, %input_addr, %input_idx_addr;
    
    // Bounds check
    setp.lt.u32 %cond, %tid, %n_val;
    
    // Load value from global memory
    @%cond ld.global.f32 %value, [%input_idx_addr];
    
    // In a real implementation, we would demonstrate shared memory usage
    // and potential bank conflicts here
    
    // Store result back to global memory
    @%cond st.global.f32 [%output_addr + %input_idx_addr], %value;
    
    ret;
}